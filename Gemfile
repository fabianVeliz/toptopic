source 'https://rubygems.org'

ruby '2.1.3'

# Rails
gem 'rails', '4.2'

# Storage
gem 'bson_ext'
gem 'mongoid',      '4.0.0'

# Mongoid Plugins
gem 'mongoid-paperclip', require: 'mongoid_paperclip'
gem 'mongoid-slug'

# Authentication
gem 'devise'

# Plugins
gem 'figaro'
gem 'decent_exposure'
gem 'inherited_resources'

# Frontend
gem 'sass-rails',       '~> 5.0'
gem 'bourbon'
gem 'neat'
gem 'slim-rails'
gem 'uglifier',         '>= 1.3.0'
gem 'coffee-rails',     '~> 4.0.0'
gem 'jquery-rails'
gem 'materialize-sass', '0.95.3.4'
gem 'aws-sdk',          '< 2.0'

# Development and Test tools
group :development, :test do
  gem 'puma'
  gem 'quiet_assets'
  gem 'factory_girl_rails', '~> 4.0'
  gem 'ffaker'
  gem 'rspec-rails'
end

# Misc
group :doc do
  gem 'sdoc', require: false
end